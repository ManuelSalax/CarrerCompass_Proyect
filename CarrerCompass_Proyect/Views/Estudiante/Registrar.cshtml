@{
    ViewData["Title"] = "Registro de Estudiante";
}

<h2>Registro de Estudiante</h2>

<form asp-action="Registrar" method="post">
    <div class="form-group">
        <label>Nombre completo:</label>
        <input type="text" name="nombreCompleto" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Correo electrónico:</label>
        <input type="email" name="correoElectronico" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Fecha de nacimiento:</label>
        <input type="date" name="fechaNacimiento" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Continuar</button>
</form>
