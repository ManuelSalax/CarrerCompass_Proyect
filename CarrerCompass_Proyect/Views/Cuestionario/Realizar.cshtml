@model CarrerCompass_Proyect.Application.Models.FormularioOpciones

@{
    ViewData["Title"] = "Career Compass Form";
    int estudianteId = (int)ViewBag.EstudianteId;
    string estudianteName = ViewBag.EstudianteNombre as string;
}

<h2>Career Compass Questionnaire</h2>

@if (!string.IsNullOrEmpty(estudianteName))
{
    <p><strong>Student:</strong> @estudianteName</p>
}

<form asp-action="Procesar" asp-controller="Cuestionario" method="post">
    <input type="hidden" name="EstudianteId" value="@estudianteId" />

    <h4>2. Personal Interests</h4>
    @foreach (var interest in Model.Intereses)
    {
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="InteresesSeleccionados" value="@interest" />
            <label class="form-check-label">@interest</label>
        </div>
    }

    <h4>3. Skills and Strengths</h4>
    @foreach (var skill in Model.Habilidades)
    {
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="HabilidadesSeleccionadas" value="@skill" />
            <label class="form-check-label">@skill</label>
        </div>
    }

    <h4>4. Preferred Knowledge Areas</h4>
    @foreach (var area in Model.AreasDeInteres)
    {
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="AreasInteresSeleccionadas" value="@area" />
            <label class="form-check-label">@area</label>
        </div>
    }

    <h4>5. Learning Style</h4>
    @foreach (var style in Model.EstilosDeAprendizaje)
    {
        <div class="form-check">
            <input class="form-check-input" type="radio" name="EstiloAprendizaje" value="@style" required />
            <label class="form-check-label">@style</label>
        </div>
    }

    <h4>6. Work Environment Preferences</h4>
    @foreach (var pref in Model.PreferenciasLaborales)
    {
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="PreferenciasLaboralesSeleccionadas" value="@pref" />
            <label class="form-check-label">@pref</label>
        </div>
    }

    <h4>7. Future Expectations</h4>
    <div class="form-group">
        <label>What do you hope to achieve with your career?</label>
        <textarea name="ExpectativaCarrera" class="form-control" rows="3"></textarea>
    </div>

    <div class="form-group">
        <label>Do you already have a career or area in mind?</label>
        <textarea name="CarreraEnMente" class="form-control" rows="3"></textarea>
    </div>

    <button type="submit" class="btn btn-primary mt-4">Submit</button>
</form>
